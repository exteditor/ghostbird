{
  "include": [],
  "files": [],
  "references": [
    {
      "path": "src/root"
    },
    {
      "path": "src/test"
    },
    {
      "path": "tools"
    }
  ],
  "barrelsby": {
    "name": "index.ts",
    "delete": true,
    "location": "all",
    "noSemicolon": true,
    "noHeader": true,
    "directory": "src",
    "include": [
      "/[^./]+[.]ts$"
    ],
    "exclude": [
      "[/.]test[/.]"
    ]
  },
  "typedocOptions": {
    "out": "build/doc",
    "favicon": "ext/blue.svg",
    "router": "structure",
    "searchInDocuments": true,
    "githubPages": false,
    "customJs": "doc/res/typedoc.cjs",
    "ignoredHighlightLanguages": [
      "mermaid"
    ],
    "entryPoints": [
      "./src/*/index.ts"
    ],
    "projectDocuments": [
      "doc/*.md",
      "ext/*.md",
      "CONTRIBUTING.md",
      "BUILDING.md"
    ],
    "plugin": [
      "typedoc-plugin-mdn-links"
    ]
  }
}
